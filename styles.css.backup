/* Brand Color Variables */
:root {
    --pp-obsidian-olive: #2F2F21;
    --pp-hearth-gold: #D1AD5C;
    --pp-hearth-gold-deep: #8C733D;
    --pp-temple-bronze: #574F31;
    --pp-charcoal: #262626;
    --pp-parchment: #FDFCF8;
    --pp-white: #FFFFFF;
}

/* Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

html {
    scroll-behavior: smooth;
}

body {
    font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    line-height: 1.6;
    color: var(--pp-charcoal);
    overflow-x: hidden;
    background: var(--pp-white);
}

/* Container */
.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
}

/* Navigation */
.navbar {
    position: static;
    
    width: 100%;
    background: #FFFFFF;
    backdrop-filter: none;
    z-index: 1000;
    transition: all 0.3s ease;
    border-bottom: none;
    box-shadow: none !important;
}
.nav-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
}

.nav-logo {
    display: flex;
    align-items: center;
    gap: 12px;
    font-weight: 600;
    font-size: 1.2rem;
    color: var(--pp-charcoal);
}

.logo-link {
    display: flex;
    align-items: center;
    gap: 12px;
    text-decoration: none;
    color: inherit;
    transition: all 0.3s ease;
}

.logo-link:hover {
    transform: scale(1.05);
}

.nav-logo-img {
    width: 50px;
    height: 50px;
    object-fit: contain;
    margin: 5px 0;
}

.nav-menu {
    display: flex;
    list-style: none;
    gap: 1rem;
}

.nav-menu a {
    color: var(--pp-hearth-gold);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.3s ease;
    position: relative;
}

.nav-menu a:hover {
    color: var(--pp-hearth-gold);
}

.nav-menu a::after {
    content: '';
    position: absolute;
    bottom: -5px;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--pp-hearth-gold);
    transition: width 0.3s ease;
}

.nav-menu a:hover::after {
    width: 100%;
}

.hamburger {
    display: none;
    flex-direction: column;
    cursor: pointer;
}

.hamburger span {
    width: 25px;
    height: 3px;
    background: var(--pp-white);
    margin: 3px 0;
    transition: 0.3s;
}

/* Hero Section */
.hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    position: relative;
    background: var(--pp-white);
    overflow: hidden;
}

.hero-background {
    position: absolute;
    
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1;
}

.floating-shapes {
    position: absolute;
    width: 100%;
    height: 100%;
}

.shape {
    position: absolute;
    border-radius: 50%;
    background: rgba(209, 173, 92, 0.1);
    animation: float 2s ease-in-out infinite;
    opacity: 1;
    pointer-events: none;
}
.shape-1 {
    width: 100px;
    height: 100px;
    top: 20%;
    left: 10%;
    animation-delay: 0s;
}

.shape-2 {
    width: 150px;
    height: 150px;
    top: 60%;
    right: 15%;
    animation-delay: 2s;
}

.shape-3 {
    width: 80px;
    height: 80px;
    bottom: 20%;
    left: 20%;
    animation-delay: 4s;
}

.shape-4 {
    width: 120px;
    height: 120px;
    top: 30%;
    right: 30%;
    animation-delay: 1s;
}

@keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    50% { transform: translateY(-20px) rotate(180deg); }
}

.hero-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    gap: 1rem;
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
    padding: 2rem;
    position: relative;
    z-index: 20;
}.hero-text {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    width: 100%;
    gap: 1.5rem;
    transform: translateY(30px);
}.hero-title {
    font-family: 'Cinzel', serif;
    font-size: 3.5rem;
    white-space: nowrap;
    font-weight: 700;
    margin-bottom: 1rem;
    line-height: 1.1;
    transform: translateY(-180px);
}
.gradient-text {
    color: var(--pp-hearth-gold);
}

.hero-subtitle {
    font-family: 'Cinzel', serif;
    font-size: 1.5rem;
    font-weight: 600;
    margin-bottom: 1rem;
    color: var(--pp-hearth-gold);
    text-transform: uppercase;
    letter-spacing: 2px;
}

.hero-description {
    font-size: 1.1rem;
    margin-bottom: 2rem;
    color: var(--pp-charcoal);
    line-height: 1.7;
    transform: translateY(-180px);
}
.hero-cta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
    transform: translateY(-180px);
}
.btn-primary, .btn-secondary {
    color: #FFFFFF !important;
    color: var(--pp-white);
    padding: 12px 24px;
    border-radius: 8px;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    border: none;
    cursor: pointer;
    font-size: 1rem;
    color: var(--pp-charcoal);
    height: 48px;
    white-space: nowrap;
    line-height: 1.2;
}

.btn-primary {
    color: #FFFFFF !important;
    color: var(--pp-white);
    background: var(--pp-hearth-gold);
    color: var(--pp-charcoal);
    box-shadow: 0 4px 15px rgba(209, 173, 92, 0.4);
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(209, 173, 92, 0.6);
    color: var(--pp-charcoal);
}

.btn-secondary {
    color: #FFFFFF !important;
    color: var(--pp-white);
    background: #FFFFFF;
    color: var(--pp-charcoal);
    border: 2px solid var(--pp-hearth-gold);
    background-color: var(--pp-hearth-gold);
}

.btn-secondary:hover {
    background: var(--pp-hearth-gold);
    color: var(--pp-charcoal);
    transform: translateY(-2px);
}

.hero-visual {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 100%;
    margin-bottom: 1rem;
    transform: translateY(-110px);
}

.grid-item {
    background: rgba(209, 173, 92, 0.05);
    border: 1px solid rgba(209, 173, 92, 0.2);
    border-radius: 16px;
    padding: 2rem;
    text-align: center;
    color: var(--pp-charcoal);
    backdrop-filter: blur(20px);
    transition: all 0.3s ease;
    animation: fadeInUp 0.8s ease-out forwards;
    opacity: 0;
}

.grid-item:hover {
    transform: translateY(-27.5px);
    background: rgba(209, 173, 92, 0.1);
    border-color: var(--pp-hearth-gold);
}

.grid-item i {
    font-size: 2.5rem;
    color: var(--pp-hearth-gold);
    margin-bottom: 1rem;
    display: block;
}

.grid-item span {
    font-size: 1.1rem;
    font-weight: 600;
    color: var(--pp-charcoal);
}

@keyframes fadeInUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Section Headers */
.section-header {
    text-align: center;
    margin-bottom: 3rem;
    color: #fff;
}

.section-header h2 {
    font-family: 'Cinzel', serif;
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--pp-hearth-gold);
}

.section-header p {
    font-size: 1.2rem;
    color: var(--pp-charcoal);
}

/* About Section */
.about {
    padding: 6rem 0;
    background: var(--pp-temple-bronze);
    position: relative;
}

.about-content {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    align-items: center;
    justify-items: center;
    text-align: center;
}

.about-text p {
    color: var(--pp-charcoal);
    font-size: 1.1rem;
    margin-bottom: 1.5rem;
    line-height: 1.7;
}

.about-stats {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 1rem;
    margin-top: 3rem;
    justify-items: center;
}

.stat {
    color: var(--pp-charcoal);
    text-align: center;
    color: var(--pp-charcoal);
}

.stat-number {
    display: block;
    font-size: 2.5rem;
    font-weight: 700;
    color: var(--pp-hearth-gold);
    margin-bottom: 0.5rem;
}

.stat-label {
    font-size: 0.9rem;
    color: var(--pp-charcoal);
    text-transform: uppercase;
    letter-spacing: 1px;
}

.about-visual {
    display: flex;
    justify-content: center;
    align-items: center;
}

.rotating-logo {
    position: relative;
    width: 500px;
    height: 500px;
}

/* Logo positioning to ensure it's above the fire */
.logo-core-img {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%) scale(0.1);
    width: 300px;
    height: 300px;
    object-fit: contain;
    z-index: 20; /* Ensure logo is above fire */
    animation: logoExpand 1.5s ease-out forwards;
    opacity: 0;
}

@keyframes logoExpand {
    0% {
        opacity: 0;
        transform: translate(-50%, -50%) scale(0.1);
    }
    50% {
        opacity: 0.7;
        transform: translate(-50%, -50%) scale(0.6);
    }
    100% {
        opacity: 1;
        transform: translate(-50%, -50%) scale(1);
    }
}

/* Hero Tagline Animation */
.hero-tagline {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    display: flex;
    gap: 1rem;
    flex-wrap: nowrap;
    justify-content: center;
    white-space: nowrap;
    width: 100%;
}

.tagline-word {
    font-family: 'Inter', sans-serif;
    font-weight: 600;
    font-size: 1.2rem;
    color: var(--pp-hearth-gold);
    text-transform: uppercase;
    letter-spacing: 2px;
    opacity: 0;
    transform: scale(0.1) translateY(-120px);
    animation: taglineExpand 2s ease-out forwards;
}

.word-1 {
    animation-delay: 0.8s;
}

.word-2 {
    animation-delay: 1.1s;
}

.word-3 {
    animation-delay: 1.4s;
}

@keyframes taglineExpand {
    0% {
        opacity: 0;
        transform: scale(0.1) translateY(-120px);
    }
    30% {
        opacity: 0.8;
        transform: scale(1) translateY(-120px);
    }
    100% {
        opacity: 1;
        transform: scale(1) translateY(0);
    }
}




/* Services Section */
.services {
    padding: 6rem 0;
    background: var(--pp-white);
}

.services-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
}

.service-card {
    color: var(--pp-charcoal);
    background: rgba(209, 173, 92, 0.05);
    border: 1px solid rgba(209, 173, 92, 0.2);
    border-radius: 16px;
    padding: 2rem;
    text-align: center;
    color: var(--pp-charcoal);
    backdrop-filter: blur(20px);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.service-card::before {
    content: '';
    position: absolute;
    
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(209, 173, 92, 0.1), transparent);
    transition: left 0.5s ease;
}

.service-card:hover::before {
    left: 100%;
}

.service-card:hover {
    transform: translateY(-27.5px);
    border-color: var(--pp-hearth-gold);
    box-shadow: 0 10px 30px rgba(209, 173, 92, 0.2);
}

.service-icon {
    width: 120px;
    height: 120px;
    background: transparent;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 1.5rem;
}

.service-icon i {
    font-size: 3rem;
    color: var(--pp-hearth-gold);
}

.service-card h3 {
    font-size: 1.3rem;
    margin-bottom: 1rem;
    color: var(--pp-charcoal);
}

.service-card p {
    color: var(--pp-charcoal);
    line-height: 1.6;
}







/* Resources Section */
.resources {
    padding: 6rem 0;
    background: var(--pp-temple-bronze);
}

.resources-content {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 2rem;
    align-items: stretch;
}

.linkedin-embed, .fund-links {
    color: var(--pp-charcoal);
    display: flex;
    flex-direction: column;
    height: 100%;
}

/* LinkedIn feed */
/* LinkedIn feed */
.linkedin-feed {
    margin: 1rem 0 1.5rem;
}
.linkedin-feed .feed-list {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
}
.linkedin-post {
    background: rgba(209, 173, 92, 0.06);
    border: 1px solid rgba(209, 173, 92, 0.25);
    border-radius: 12px;
    overflow: hidden;
}
.linkedin-post iframe {
    width: 100%;
    height: 420px;
    border: 0;
}

/* Hide LinkedIn company page iframes (keep specific post embeds) */
.linkedin-feed iframe[src*="linkedin.com/company"] {
    display: none !important;
}

.linkedin-embed h3, .fund-links h3 {
    font-size: 1.5rem;
    margin-bottom: 1rem;
    color: var(--pp-hearth-gold);
}

.linkedin-placeholder {
    background: var(--pp-white);
    border: 1px solid rgba(209, 173, 92, 0.2);
    border-radius: 16px;
    padding: 2rem;
    text-align: center;
    backdrop-filter: blur(20px);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: 100%;
}

.linkedin-placeholder::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(209, 173, 92, 0.1), transparent);
    transition: left 0.5s ease;
}

.linkedin-placeholder:hover::before {
    left: 100%;
}

.linkedin-placeholder:hover {
    transform: translateY(-27.5px);
    border-color: var(--pp-hearth-gold);
    box-shadow: 0 10px 30px rgba(209, 173, 92, 0.2);
}

.linkedin-placeholder i {
    font-size: 3rem;
    color: #0077b5;
    margin-bottom: 1rem;
    display: block;
}

.linkedin-placeholder p {
    color: var(--pp-charcoal);
    margin-bottom: 1.5rem;
    line-height: 1.6;
}

.fund-links {
    display: flex;
    flex-direction: column;
    gap: 1rem;
}

.fund-card {
    background: var(--pp-white);
    border: 1px solid rgba(209, 173, 92, 0.2);
    border-radius: 16px;
    padding: 2rem;
    backdrop-filter: blur(20px);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    height: 100%;
}

.fund-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(209, 173, 92, 0.1), transparent);
    transition: left 0.5s ease;
}

.fund-card:hover::before {
    left: 100%;
}

.fund-card:hover {
    transform: translateY(-27.5px);
    border-color: var(--pp-hearth-gold);
    box-shadow: 0 10px 30px rgba(209, 173, 92, 0.2);
}

.fund-card h3 {
    margin-bottom: 1rem;
}

.fund-card p {
    color: var(--pp-charcoal);
    margin-bottom: 1.5rem;
    line-height: 1.6;
    text-align: center;
    padding-top: 1rem;
    flex-grow: 1;
}

.linkedin-placeholder p {
    color: var(--pp-charcoal);
    margin-bottom: 1.5rem;
    line-height: 1.6;
    text-align: center;
    padding-top: 1rem;
    flex-grow: 1;
}

.fund-card a {
    display: inline-block;
    text-align: center;
    margin: 1rem auto 0;
    width: auto;
    margin-top: auto;
}

.linkedin-placeholder a {
    display: inline-block;
    width: auto;
    margin-top: auto;
}

/* Ensure all images in activity cards have consistent height */
.resources-content img {
    height: 200px;
    object-fit: cover;
    width: 100%;
    margin: 1rem 0;
    border-radius: 8px;
}

/* First card (Valkyrie Revival Fund) - show full image */
.resources-content > .fund-links:first-child .fund-card img {
    object-fit: contain;
}

/* Valkyrie Revival Fund Section */
.valkyrie-fund {
    padding: 6rem 0 20rem 0;
    background: var(--pp-white);
    position: relative;
}

.valkyrie-fund::before {
    content: '';
    position: absolute;
    
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at top center, rgba(209, 173, 92, 0.05) 0%, transparent 70%);
    pointer-events: none;
}

.valkyrie-content {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
}

.valkyrie-text p {
    font-size: 1.3rem;
    color: var(--pp-charcoal);
    margin-bottom: 3rem;
    line-height: 1.7;
}

.valkyrie-cta {
    margin-top: 1rem;
    margin-bottom: 0;
}

.valkyrie-fund .section-header h2 {
    font-size: 3.5rem;
	white-space: nowrap;
    font-weight: 700;
    margin-bottom: 1rem;
    color: var(--pp-charcoal);
    letter-spacing: 3px;
}

.valkyrie-fund .section-header p {
    font-size: 1.2rem;
    color: var(--pp-hearth-gold);
    text-transform: uppercase;
    letter-spacing: 2px;
    font-weight: 600;
}

/* Contact Section */
.contact {
    padding: 6rem 0 20rem 0;
    background: var(--pp-white);
}

.contact-content {
    display: flex;
    justify-content: center;
    align-items: center;
}

.contact-form {
    color: var(--pp-charcoal);
    color: var(--pp-charcoal);
    max-width: 600px;
    width: 100%;
}

.contact-form form {
    margin-bottom: 0;
}

.form-group {
    margin-bottom: 1.5rem;
}

.form-group:last-child {
    margin-bottom: 0;
}

.form-group label {
    display: block;
    margin-bottom: 0.5rem;
    color: var(--pp-charcoal);
    font-weight: 500;
}

.form-group input,
.form-group textarea {
    width: 100%;
    padding: 12px 16px;
    border: 1px solid rgba(209, 173, 92, 0.3);
    border-radius: 8px;
    background: rgba(209, 173, 92, 0.05);
    color: var(--pp-charcoal);
    font-size: 1rem;
    transition: all 0.3s ease;
    backdrop-filter: blur(20px);
}

.form-group input:focus,
.form-group textarea:focus {
    outline: none;
    border-color: var(--pp-hearth-gold);
    box-shadow: 0 0 0 3px rgba(209, 173, 92, 0.1);
}

.form-group input::placeholder,
.form-group textarea::placeholder {
    color: #888;
}

.contact-info {
    color: var(--pp-charcoal);
    color: var(--pp-charcoal);
}

.info-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
    padding: 1.5rem;
    background: rgba(209, 173, 92, 0.05);
    border-radius: 12px;
    backdrop-filter: blur(20px);
}

.info-item i {
    font-size: 1.5rem;
    color: var(--pp-hearth-gold);
    width: 40px;
    text-align: center;
}

.info-item h4 {
    margin-bottom: 0.5rem;
    color: var(--pp-hearth-gold);
}

.info-item p {
    color: var(--pp-charcoal);
}

.info-item:last-child {
    margin-bottom: 0;
}

/* Footer */
.footer {
    background: var(--pp-temple-bronze);
    color: var(--pp-charcoal);
    padding: 1rem 0 1rem;
    margin-top: -18rem;
}

.footer-content {
    text-align: center;
    margin-bottom: 2rem;
}

.footer-logo {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
}

.logo-text {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
}

.company-name {
    color: var(--pp-hearth-gold);
    font-family: 'Inter', sans-serif;
    font-weight: 700;
    font-size: 1.5rem;
}

.company-slogan {
    color: var(--pp-hearth-gold);
    font-family: 'Inter', sans-serif;
    font-weight: 600;
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 1px;
}

.footer-nav {
    display: flex;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
}

.footer-nav a {
    color: var(--pp-charcoal);
    text-decoration: none;
    transition: color 0.3s ease;
    font-weight: 500;
}

.footer-nav a:hover {
    color: var(--pp-hearth-gold);
}

.footer-social {
    text-align: center;
    margin-bottom: 2rem;
}

.social-links {
    display: flex;
    gap: 1rem;
    justify-content: center;
}

.social-links a {
    color: #FFFFFF !important;
    width: 40px;
    height: 40px;
    background: var(--pp-hearth-gold);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--pp-charcoal);
    text-decoration: none;
    transition: all 0.3s ease;
}

.social-links a:hover {
    color: #FFFFFF !important;
    background: var(--pp-hearth-gold-deep);
    color: var(--pp-charcoal);
    transform: translateY(-2px);
}

.footer-bottom {
